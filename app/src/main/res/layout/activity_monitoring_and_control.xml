<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator.watervolume.WaterVolume">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/howtomain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundmain"
        tools:context=".Dashboard">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/imageBtnBack"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:src="@drawable/baseline_arrow_back_24"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ohcroplogo" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/textcolor_violet"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageBtnProfile"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:src="@drawable/baseline_person_24" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollviewcontrol"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/ohcropdevice"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/blankTextView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/hydroponic1" />

                <LinearLayout
                    android:id="@+id/nutrientsolution_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/calculator_drawable_card"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textView40"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Monitoring"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp">

                                <TextView
                                    android:id="@+id/textView43"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ml/L"
                                    android:textSize="16dp" />

                                <EditText
                                    android:id="@+id/solutionBText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textSize="30dp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp">

                                <TextView
                                    android:id="@+id/textView43sdf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ml/L"
                                    android:textSize="16dp" />

                                <EditText
                                    android:id="@+id/solutionBTextdfgd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_weight="1"
                                    android:background="@color/transparent"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textSize="30dp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="\t\tWelcome to the monitoring hub of our hydroponics app, where you gain unparalleled insight into the health and progress of your plants. With our comprehensive monitoring system, you can effortlessly keep tabs on vital parameters crucial for plant growth. From temperature and humidity to nutrient levels and pH balance, our real-time monitoring feature provides you with up-to-the-minute data directly on your smartphone or tablet\n"
                        android:textAlignment="textStart"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="\t\tStay informed about your plants' well-being with intuitive visualizations and detailed analytics. Track growth trends, identify patterns, and detect anomalies early on to ensure optimal conditions for cultivation. Our user-friendly interface makes it easy to monitor multiple aspects of your hydroponic setup simultaneously, empowering you with the knowledge you need to nurture thriving plants and maximize yields.\n"
                        android:textAlignment="textStart"
                        android:textSize="16dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/hydroponic2"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:id="@+id/result_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/calculator_drawable_card"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView46"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Control"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView48"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="\t\tTake command of your hydroponic environment like never before with our advanced control system. With just a few taps on your device, you can fine-tune every aspect of your grow space to create the perfect conditions for your plants to thrive. Adjust nutrient levels, regulate lighting schedules, and fine-tune environmental parameters with precision and ease, all from the palm of your hand.\n"
                                android:textAlignment="textStart"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/textView49"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="\t\tOur control feature offers unparalleled flexibility and customization, allowing you to tailor settings to suit the specific needs of your plants and your unique growing preferences. Whether you're a seasoned grower or just starting out, our user-friendly interface makes it simple to optimize your hydroponic setup for maximum efficiency and productivity.\n"
                                android:textAlignment="textStart"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/textView50"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="\t\tExperience the ultimate convenience and control with our hydroponics app. Empower yourself to create an ideal growing environment for your plants, and unlock their full potential with precision control at your fingertips.\n"
                                android:textAlignment="textStart"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/blankTextView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>